@model List<LifeOrganizerApp.Models.AppTask>
@{
    ViewData["Title"] = "Work Workspace";
    var completedTasks = ViewBag.CompletedTasks as List<LifeOrganizerApp.Models.AppTask> ?? new List<LifeOrganizerApp.Models.AppTask>();
    var meetings = ViewBag.Meetings as List<LifeOrganizerApp.Models.Event> ?? new List<LifeOrganizerApp.Models.Event>();
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-5 text-primary fw-bold"><i class="bi bi-briefcase-fill"></i> Work Workspace</h1>
                <p class="text-muted">Manage projects, tasks, and meetings.</p>
            </div>
            <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#addTaskModal">
                <i class="bi bi-plus-lg"></i> New Task
            </button>
        </div>
    </div>

    <div class="row g-4">
        <!-- Tasks Column -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0 fw-bold">Active Tasks</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var task in Model)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                    <div class="d-flex align-items-center">
                                        <form asp-action="CompleteTask" method="post" class="me-3">
                                            <input type="hidden" name="id" value="@task.TaskId" />
                                            <button type="submit" class="btn btn-outline-success btn-sm rounded-circle" title="Mark Complete">
                                                <i class="bi bi-check"></i>
                                            </button>
                                        </form>
                                        <div>
                                            <div class="fw-bold">@task.Title</div>
                                            <small class="text-muted">
                                                @if (task.DueDate.HasValue)
                                                {
                                                    <i class="bi bi-calendar"></i> @task.DueDate.Value.ToShortDateString()
                                                }
                                                <span class="badge bg-light text-dark border ms-2">@task.Priority</span>
                                            </small>
                                        </div>
                                    </div>
                                    <form asp-action="DeleteTask" method="post" onsubmit="return confirm('Delete this task?');">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-link text-danger p-0"><i class="bi bi-trash"></i></button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-clipboard-check display-4 mb-3 d-block"></i>
                            No active work tasks. Time to relax or add a new project!
                        </div>
                    }
                </div>
            </div>

            <!-- Completed Tasks (Collapsible) -->
            <div class="accordion" id="completedAccordion">
                <div class="accordion-item border-0 shadow-sm rounded-3 overflow-hidden">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCompleted">
                             Recently Completed
                        </button>
                    </h2>
                    <div id="collapseCompleted" class="accordion-collapse collapse" data-bs-parent="#completedAccordion">
                        <div class="accordion-body p-0">
                             <ul class="list-group list-group-flush">
                                @foreach (var task in completedTasks)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center text-muted bg-light">
                                        <span class="text-decoration-line-through">@task.Title</span>
                                        <span class="badge bg-secondary">Done</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar (Meetings & Projects) -->
        <div class="col-lg-4">
            <!-- Meetings -->
            <div class="card shadow-sm border-0 rounded-4 mb-4 bg-soft-primary">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-calendar-event"></i> Upcoming Meetings</h5>
                </div>
                <div class="card-body">
                    @if (meetings.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var meeting in meetings)
                            {
                                <li class="mb-3 border-bottom pb-2">
                                    <div class="fw-bold">@meeting.Title</div>
                                    <div class="small text-muted">@meeting.Date.ToShortDateString() @meeting.Time</div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted small">No upcoming work meetings.</p>
                    }
                    <button class="btn btn-light w-100 btn-sm text-primary">Schedule Meeting</button>
                </div>
            </div>

            <!-- Focus Timer Placeholder -->
            <div class="card shadow-sm border-0 rounded-4 bg-dark text-white">
                <div class="card-body text-center py-4">
                    <i class="bi bi-stopwatch display-4 mb-3"></i>
                    <h5>Focus Mode</h5>
                    <p class="small text-white-50">Start a Pomodoro timer to boost productivity.</p>
                    <button class="btn btn-outline-light rounded-pill px-4">Start Timer</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Task Modal -->
<div class="modal fade" id="addTaskModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="AddTask" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New Work Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Task Title</label>
                        <input type="text" name="title" class="form-control" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Due Date</label>
                            <input type="date" name="dueDate" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Priority</label>
                            <select name="priority" class="form-select">
                                <option value="Low">Low</option>
                                <option value="Medium" selected>Medium</option>
                                <option value="High">High</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Task</button>
                </div>
            </div>
        </form>
    </div>
</div>
