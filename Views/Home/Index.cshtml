@{
    ViewData["Title"] = "Home Life";
}

<div class="container py-4">
    <h1 class="display-4 text-primary">Home Life Organizer</h1>
    <p class="lead">Manage chores, bills, and shopping lists here.</p>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Chores</h5>
