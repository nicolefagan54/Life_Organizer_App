@{
    ViewData["Title"] = "Home Life";
    var bills = ViewBag.Bills as List<LifeOrganizerApp.Models.Bill> ?? new List<LifeOrganizerApp.Models.Bill>();
    var chores = ViewBag.Chores as List<LifeOrganizerApp.Models.Chore> ?? new List<LifeOrganizerApp.Models.Chore>();
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold" style="color: #fd7e14;"><i class="bi bi-house-heart-fill"></i> Home Life</h1>
            <p class="text-muted">Manage household bills, subscriptions, and chores.</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Bills Section -->
        <div class="col-md-7">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-cash-coin"></i> Bills & Budget</h5>
                    <button class="btn btn-outline-dark btn-sm" data-bs-toggle="modal" data-bs-target="#addBillModal">+ Add Bill</button>
                </div>
                <div class="card-body p-0">
                    @if (bills.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Amount</th>
                                        <th>Due Date</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bill in bills)
                                    {
                                        var isOverdue = bill.DueDate < DateTime.Today && bill.Status == "Unpaid";
                                        <tr class="@(isOverdue ? "table-danger" : "")">
                                            <td class="fw-bold">@bill.Title</td>
                                            <td>$@bill.Amount.ToString("N2")</td>
                                            <td>
                                                @bill.DueDate.ToShortDateString()
                                                @if (isOverdue)
                                                {
                                                    <span class="badge bg-danger ms-1">Overdue</span>
                                                }
                                            </td>
                                            <td>
                                                @if (bill.Status == "Paid")
                                                {
                                                    <span class="badge bg-success">Paid</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Unpaid</span>
                                                }
                                            </td>
                                            <td>
                                                @if (bill.Status == "Unpaid")
                                                {
                                                    <form asp-action="PayBill" method="post">
                                                        <input type="hidden" name="id" value="@bill.BillId" />
                                                        <button class="btn btn-sm btn-outline-success rounded-pill">Mark Paid</button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center text-muted">
                            <i class="bi bi-wallet2 display-4 mb-3 d-block"></i>
                            <p>No bills tracked yet. Enjoy the savings!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Household Chores -->
        <div class="col-md-5">
            <div class="card shadow-sm border-0 rounded-4 h-100 bg-soft-secondary">
                <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center border-bottom-0">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-check2-square"></i> General Chores</h5>
                    <button class="btn btn-light btn-sm shadow-sm" data-bs-toggle="modal" data-bs-target="#addChoreModal">+ New Chore</button>
                </div>
                <div class="card-body pt-0">
                    @if (chores.Any())
                    {
                        <ul class="list-group list-group-flush rounded-3">
                            @foreach (var chore in chores)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-white mb-2 shadow-sm rounded border-0">
                                    <div>
                                        <div class="fw-bold">@chore.Title</div>
                                        <small class="text-muted">@chore.Frequency</small>
                                    </div>
                                    @if (chore.Status == "Completed")
                                    {
                                        <span class="text-success"><i class="bi bi-check-circle-fill"></i> Done</span>
                                    }
                                    else
                                    {
                                        <form asp-action="CompleteChore" method="post">
                                            <input type="hidden" name="id" value="@chore.ChoreId" />
                                            <button class="btn btn-outline-secondary btn-sm rounded-circle shadow-sm" title="Mark Done"><i class="bi bi-check"></i></button>
                                        </form>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <p class="text-muted">Use this list for shared household tasks like "Mow Lawn" or "Buying Groceries".</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bill Modal -->
<div class="modal fade" id="addBillModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="AddBill" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Bill</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Bill Name</label>
                        <input type="text" name="title" class="form-control" placeholder="e.g. Electric Bill" required />
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label">Amount ($)</label>
                            <input type="number" step="0.01" name="amount" class="form-control" required />
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label">Due Date</label>
                            <input type="date" name="dueDate" class="form-control" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select">
                            <option value="Utility">Utility</option>
                            <option value="Rent/Mortgage">Rent/Mortgage</option>
                            <option value="Subscription">Subscription</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Bill</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Add Chore Modal -->
<div class="modal fade" id="addChoreModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="AddChore" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Household Chore</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                         <label class="form-label">Chore Title</label>
                         <input type="text" name="title" class="form-control" placeholder="e.g. Clean Windows" required />
                    </div>
                </div>
                <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Chore</button>
                </div>
            </div>
        </form>
    </div>
</div>
